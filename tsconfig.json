{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        // "types": ["webpack-env"],
        "typeRoots": ["types/index.d.ts"],
        "paths": {
            "@/*": ["./*"],
            "@packages/*": ["packages/*"],
            "@src/*": ["src/*"],
            "@test/*": ["test/*"],
            "calm-harin/*": ["./*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": [
        "test/**/*.ts",
        "test/**/*.tsx",
        "test/**/*.vue",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "packages/**/*.vue",
        "docs/.vuepress/**/*.ts",
        "docs/.vuepress/**/*.tsx",
        "docs/.vuepress/**/*.vue"
    ],
    "exclude": ["node_modules"]
}
